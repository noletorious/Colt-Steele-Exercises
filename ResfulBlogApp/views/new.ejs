<% include partials/header %>
<div class="ui container segment">
    <div class="ui huge header">Add a new post</div>
    <form action="/create" method="POST" class="ui form">
        <div class="ui field">
            <label>Title:</label>
            <input type="text" placeholder="Title" name ="blog[title]" />    
        </div>
        <div class="ui field">
            <label>Image URL:</label>
            <input type="text" placeholder="Image URL" name ="blog[image]" />    
        </div>
        <div class="ui field">
            <label>Blog post:</label>
            <textarea rows="3" name="blog[body]"></textarea>
        </div>
        <input type="submit" class="ui button primary">
    </form>
</div>
<% include partials/footer %>