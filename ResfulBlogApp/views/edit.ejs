<% include partials/header %>
<div class="ui container segment">
    <div class="ui huge header">Edit: <%= post.title %></div>
    <form action="/blog/<%= post._id %>?_method=PUT" method="POST" class="ui form">
        <div class="ui field">
            <label>Title:</label>
            <input type="text" value="<%= post.title %>" name ="blog[title]" />    
        </div>
        <div class="ui field">
            <label>Image URL:</label>
            <input type="text" value="<%= post.image %>" name ="blog[image]" />    
        </div>
        <div class="ui field">
            <label>Blog post:</label>
            <textarea rows="3" name="blog[body]"><%= post.body %></textarea>
        </div>
        <input type="submit" value="Update & Save" class="ui button basic primary">
    </form>
</div>
<% include partials/footer %>